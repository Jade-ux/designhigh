---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Logo from '../components/Logo.astro';
---

<Layout title="Design high">
	<main>
		<Logo />

		<h1><span class="text-gradient">DESIGN HIGH</span></h1>
		<div class="main-body">
		<ul role="list" class="link-card-grid">
			<p>text</p>
			<Card
				href="https://docs.astro.build/"
				title="Design"
				body="your brand beautifully presented... "
			/>
	
	
			<Card
				href="https://astro.build/integrations/"
				title="Build"
				body="responsive websites built for performance, reliability and enhanced user experience"
			/>
			<p>text</p>
			<p>text</p>
			<Card
				href="https://astro.build/themes/"
				title="Optimise"
				body="make sure your website is seen with search engine optimisation and marketing"
			/>

	
		</ul>
	</div>
	</main>
</Layout>

<style>

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}

	.main-body {

		padding: 1.5rem;
		background-image: url("/snowdon.svg")
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 4rem;
		padding: 0;
	}
</style>
